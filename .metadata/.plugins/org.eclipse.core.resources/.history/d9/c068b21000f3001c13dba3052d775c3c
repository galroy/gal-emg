#include "button.h"



void buttonInit(BUTTON *btn,ButtonName btnName, GPIO_TypeDef* GPIOx, uint16_t GPIO_Pin){
	if(btn == NULL){
		return;
	}
	btn->buttonState = BUTTON_STATE_NONE;
	btn->GPIOx = GPIOx;
	btn->GPIO_Pin = GPIO_Pin;
	btn->btnName = btnName;
	btn->pressTime = 0;
}
BUTTON_STATE buttonCheckState(BUTTON *btn){
	return btn->buttonState;
}


