		printf("Invalid command\r\n");
		return;
	}*/
}


int mainLoop(){

	initRTC(&rtc, &hi2c1);
	setPass(&rtc, MY_PASS);

	while(1){
		if (commTask()) {
			handleCommand();
		}

	}
}
