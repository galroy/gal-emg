	{
		uint32_t passFromMem;
		getPass(&rtc, &passFromMem);
		if(passFromMem == param){
			printf("password Ok\n\r");
			HAL_GPIO_WritePin(GPIOx, GPIO_Pin, PinState)
		}else{
			printf("Invalid password\n\r");
		}

		/*_brightnessMode = 0;
		ledOn(&ledB);*/
	}
	/*else if (strcmp(cmd, "half") == 0)
	{
		_brightnessMode = 0;
		ledHalf(&ledB);
