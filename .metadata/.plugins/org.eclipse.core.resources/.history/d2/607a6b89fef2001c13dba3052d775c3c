#ifndef SRC_BUTTON_H_
#define SRC_BUTTON_H_

#include "MyMain.h"

typedef enum buttontate_{
	BUTTON_STATE_NONE,
	BUTTON_STATE_PRESS,
	BUTTON_STATE_LONG_PRESS,
	BUTTON_STATE_DOUBLE_PRESS
} BUTTON_STATE;

typedef struct _button{
	BUTTON_STATE buttonState;
	GPIO_TypeDef* GPIOx;
	uint16_t GPIO_Pin;
} BUTTON;

void buttonInit(BUTTON *btn, GPIO_TypeDef* GPIOx, uint16_t GPIO_Pin);
BUTTON_STATE buttonCheckState(BUTTON *btn);


#endif /* SRC_BUTTON_H_ */
