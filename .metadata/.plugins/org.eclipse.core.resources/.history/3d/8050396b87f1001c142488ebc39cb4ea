	static int c = 0;
	if(c == 0){
		ledOff(&ledB);
		ledOff(&ledR);
		//buzzerOn(&bzr);
		uint8_t tmp;
		tmp = GetTav(262);
		buzzerOnFreq(&bzr,/*GetTav(262)*/390);
		HAL_TIM_Base_Start_IT(&htim6);
		buzzerOn(&bzr);
		c=1;
	}else{
		ledOn(&ledB);
		ledOn(&ledR);
		HAL_TIM_Base_Stop_IT(&htim6);
		buzzerOff(&bzr);
		c=0;
	}


}

